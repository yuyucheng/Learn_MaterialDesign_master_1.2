<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cnpay.material">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/customTheme.NoActionBar">
        <activity
            android:name=".base.InitActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:theme="@style/customTheme.NoActionBar" />
        <activity
            android:name=".activity.MaterialListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.socket.SocketLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.socket.SocketServiceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.socket.SocketPostActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.socket.SocketReceiverActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>